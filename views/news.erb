<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>Locale Information</title>
  </head>
  <body>

    <nav class="navbar navbar-dark bg-success">
        <a class="navbar-brand">Locale Information</a>
        <form class="form-inline" action="/news">
            <input class="form-control mr-sm-2" placeholder="Update Destination" aria-label="Update Destination" type="text" name="q">
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
        </form>
    </nav>
  
    <div class="container mt-5">
      <h1>Locale Weather for <%= @location %>:</h1>
        <h2> It is currently <%= @current_temp %> degrees (F) and <%= @current_cond %>.</h2>
      <p> </p>
      <h3> Your 3-day Forecast. </h3>
      <div class="container mt-5">
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Day</th>
      <th scope="col">Temperature (F)</th>
      <th scope="col">Weather Conditions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Tomorrow</th>
      <td><%=@daily_temp[0]%> degrees</td>
      <td><%=@daily_cond[0]%></td>
    </tr>
    <tr>
      <th scope="row">In 2 Days</th>
      <td><%=@daily_temp[1]%> degrees</td>
      <td><%=@daily_cond[1]%></td>
    </tr>
    <tr>
      <th scope="row">In 3 Days</th>
      <td><%=@daily_temp[2]%> degrees</td>
      <td><%=@daily_cond[2]%></td>
    </tr>
  </tbody>
</table>
</div>


    </div>
    
    <div class="container mt-5">
      <h1>Locale News for <%= @location %>:</h1>
            <div class="col">
                    <% for article in @news["articles"] %>
                                <a href="<%= article["url"] %>"></a>
                            </div>
                            <div class="col-10">
                               <ul><li> <a href="<%= article["url"] %>"><b><%= article["title"] %></b></a></br> </li></ul>
                                <div class="d-none d-md-block">
                                </div>
                    <% end %>
            </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>